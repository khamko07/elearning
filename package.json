{
  "name": "elearning-system",
  "version": "1.0.0",
  "description": "E-Learning System with optimized assets",
  "main": "index.js",
  "scripts": {
    "build": "node build/optimize-assets.js",
    "build:css": "npm run minify:css",
    "build:js": "npm run minify:js",
    "minify:css": "cleancss -o dist/css/app.min.css assets/css/critical.css assets/css/main.css",
    "minify:js": "terser assets/js/*.js -o dist/js/app.min.js --compress --mangle",
    "optimize:images": "imagemin images/**/* --out-dir=dist/images",
    "watch": "npm-watch",
    "serve": "http-server . -p 8080",
    "lighthouse": "lighthouse http://localhost:8080/login-optimized.php --output=html --output-path=./lighthouse-report.html",
    "analyze": "npm run build && npm run lighthouse"
  },
  "watch": {
    "build:css": {
      "patterns": ["assets/css"],
      "extensions": "css"
    },
    "build:js": {
      "patterns": ["assets/js"],
      "extensions": "js"
    }
  },
  "devDependencies": {
    "clean-css-cli": "^5.6.2",
    "terser": "^5.19.4",
    "imagemin": "^8.0.1",
    "imagemin-mozjpeg": "^10.0.0",
    "imagemin-pngquant": "^9.0.2",
    "imagemin-svgo": "^10.0.1",
    "npm-watch": "^0.11.0",
    "http-server": "^14.1.1",
    "lighthouse": "^11.1.0"
  },
  "keywords": [
    "elearning",
    "education",
    "performance",
    "optimization"
  ],
  "author": "E-Learning Team",
  "license": "MIT",
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ]
}